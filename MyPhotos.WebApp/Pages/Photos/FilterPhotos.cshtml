@page
@using Microsoft.CodeAnalysis.Differencing
@model MyPhotos.WebApp.Pages.Photos.FilterPhotosModel
@{
    ViewData["Title"] = "FilterPhotos";
}

<h1>FilterPhotos</h1>

<form>
    <p>
        Property: <input type="text" asp-for="PropertySearched" />
    </p>

    <p>
        Value: <input type="text" asp-for="ValueSearched" />
    </p>
    <input type="submit" value="Filter" />

</form>

<h2>The property searched is: @Html.DisplayFor(model => model.PropertySearched)</h2>
<h2>The value searched is: @Html.DisplayFor(model => model.ValueSearched)</h2>
<h2>There was found @Html.DisplayFor(model => model.FilteredPhotos.Count) photos</h2>
<table class="table">
    <thead>
        <tr>
            <th> @Html.DisplayNameFor(model => model.FilteredPhotos[0].Id) </th>
            <th> @Html.DisplayNameFor(model => model.FilteredPhotos[0].Name) </th>
            <th> @Html.DisplayNameFor(model => model.FilteredPhotos[0].Path) </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.FilteredPhotos)
        {
            <tr style="font-size:small">
                <td> @Html.DisplayFor(modelItem => item.Id) </td>
                <td> @Html.DisplayFor(modelItem => item.Name) </td>
                <td> @Html.DisplayFor(modelItem => item.Path) </td>
            </tr>
        }
    </tbody>
</table>
