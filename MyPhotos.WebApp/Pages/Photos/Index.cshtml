@page
@model MyPhotos.WebApp.Pages.Photos.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1> 
<p>
     <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th> @Html.DisplayNameFor(model => model.Photos[0].Id) </th> 
        <th> @Html.DisplayNameFor(model => model.Photos[0].Name) </th> 
        <th> @Html.DisplayNameFor(model => model.Photos[0].Path) </th> 
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Photos)
    {
        <tr style="font-size:small">
            <td> @Html.DisplayFor(modelItem => item.Id) </td>
            <td> @Html.DisplayFor(modelItem => item.Name) </td>
            <td> @Html.DisplayFor(modelItem => item.Path) </td>
            <td> <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> | <a asp-page="/Comments/List" asp-route-id="@item.Id">Details</a> | <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a> | <a asp-page="/Comments/Create" asp-route-id="@item.Id">Add a Comment</a> </td>
        </tr>
    }
    </tbody>
</table>
